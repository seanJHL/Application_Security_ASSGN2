@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    ViewData["AuroraTitle"] = "Reset Password";
    ViewData["AuroraSubtitle"] = "Don't worry, it happens! Enter your email and we'll send you a reset link.";
    ViewData["LayoutReversed"] = false;
    Layout = "_AuthLayout";
}

<div class="auth-header">
    <h1>Forgot password?</h1>
    <p>Enter your email address and we'll send you a link to reset your password.</p>
</div>

<form asp-action="ForgotPassword" method="post" id="forgotPasswordForm" class="auth-form">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="RecaptchaToken" id="recaptchaToken" />
    
    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email address" autofocus />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn-auth-primary">Send reset link</button>

    <div class="auth-footer">
        <p>Remember your password? <a asp-action="Login">Back to Login</a></p>
    </div>
</form>

@section Scripts {
    <script>
        document.getElementById('forgotPasswordForm').addEventListener('submit', function(e) {
            e.preventDefault();
            var form = this;
            
            executeRecaptcha('forgot_password', function(token) {
                document.getElementById('recaptchaToken').value = token;
                form.submit();
            });
        });
    </script>
}
