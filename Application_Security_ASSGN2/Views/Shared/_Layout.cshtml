@inject IConfiguration Configuration
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Application Security</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Top Bar -->
    <header class="top-bar">
        <div class="top-bar-container">
            <!-- Logo/Brand -->
            <a class="top-bar-brand" asp-controller="Home" asp-action="Index">
                <span class="brand-text">SecureApp</span>
            </a>

            <!-- Navigation Links -->
            <nav class="top-bar-nav">
                <a class="nav-link-custom" asp-controller="Home" asp-action="Index">Home</a>
                @if (!Context.Session.GetInt32("UserId").HasValue)
                {
                    <a class="nav-link-custom" asp-controller="Home" asp-action="Privacy">Privacy</a>
                }
            </nav>

            <!-- Right Section: Auth Buttons or User Menu -->
            <div class="top-bar-actions">
                @if (Context.Session.GetInt32("UserId").HasValue)
                {
                    <!-- User is logged in - Show user dropdown -->
                    <div class="dropdown">
                        <button class="user-menu-btn" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="user-avatar">
                                @{
                                    var userName = Context.Session.GetString("UserName") ?? "User";
                                    var initials = string.Join("", userName.Split(' ').Take(2).Select(n => n.Length > 0 ? n[0].ToString().ToUpper() : ""));
                                }
                                @initials
                            </div>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end user-dropdown" aria-labelledby="userDropdown">
                            <li class="dropdown-header">
                                <div class="user-info">
                                    <div class="user-avatar-large">@initials</div>
                                    <div class="user-details">
                                        <span class="user-name">@Context.Session.GetString("UserName")</span>
                                        <span class="user-email">@Context.Session.GetString("UserEmail")</span>
                                    </div>
                                </div>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-speedometer2"></i> Dashboard
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                    <i class="bi bi-key"></i> Change Password
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="bi bi-box-arrow-right"></i> Sign out
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <!-- User is not logged in - Show Sign in / Sign up buttons -->
                    <a asp-controller="Account" asp-action="Login" class="btn-signin">Sign in</a>
                    <a asp-controller="Account" asp-action="Register" class="btn-signup">
                        <i class="bi bi-person-plus"></i> Sign up
                    </a>
                }
            </div>
        </div>
    </header>

    <main class="main-content">
        @if (TempData["SuccessMessage"] != null || TempData["ErrorMessage"] != null || TempData["WarningMessage"] != null)
        {
            <div class="alert-container">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["WarningMessage"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-circle-fill me-2"></i>
                        @TempData["WarningMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>
        }
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">&copy; @DateTime.Now.Year - Application Security Assignment</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    
    @* Google reCAPTCHA v3 *@
    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["ReCaptcha:SiteKey"]"></script>
    <script>
        // reCAPTCHA helper function
        function executeRecaptcha(action, callback) {
            var siteKey = '@Configuration["ReCaptcha:SiteKey"]';
            if (siteKey && siteKey !== 'YOUR_RECAPTCHA_SITE_KEY') {
                grecaptcha.ready(function() {
                    grecaptcha.execute(siteKey, { action: action }).then(function(token) {
                        callback(token);
                    });
                });
            } else {
                callback('');
            }
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
