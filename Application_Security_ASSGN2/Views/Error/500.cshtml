@{
    ViewData["Title"] = "Server Error";
    Layout = "_ErrorLayout";
}

<div class="error-content">
    <div class="error-code">500</div>
    <h1 class="error-headline">Internal Server Error</h1>
    <p class="error-subtitle">Something went wrong on our end. Please try again later.</p>
    <div class="error-actions">
        <a href="/" class="btn-error-primary">Go Home</a>
        <a href="javascript:location.reload()" class="btn-error-secondary">Try Again</a>
    </div>
</div>
