@{
    ViewData["Title"] = "Server Error";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center py-5">
        <div class="error-template">
            <h1 class="display-1 text-danger">500</h1>
            <h2>Internal Server Error</h2>
            <div class="error-details my-4">
                <p class="text-muted">Something went wrong on our end. Please try again later.</p>
            </div>
            <div class="error-actions">
                <a href="/" class="btn btn-primary btn-lg">
                    <i class="bi bi-house"></i> Go Home
                </a>
                <a href="javascript:location.reload()" class="btn btn-outline-secondary btn-lg ms-2">
                    <i class="bi bi-arrow-clockwise"></i> Try Again
                </a>
            </div>
        </div>
    </div>
</div>
