@{
    ViewData["Title"] = "Page Not Found";
    Layout = "_ErrorLayout";
}

<div class="error-content">
    <div class="error-code">404</div>
    <h1 class="error-headline">Page Not Found</h1>
    <p class="error-subtitle">The page you're looking for doesn't exist or has been moved.</p>
    <div class="error-actions">
        <a href="/" class="btn-error-primary">Go Home</a>
        <a href="javascript:history.back()" class="btn-error-secondary">Go Back</a>
    </div>
</div>
