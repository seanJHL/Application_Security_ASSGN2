@{
    ViewData["Title"] = "Access Forbidden";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center py-5">
        <div class="error-template">
            <h1 class="display-1 text-danger">403</h1>
            <h2>Access Forbidden</h2>
            <div class="error-details my-4">
                <p class="text-muted">You don't have permission to access this resource.</p>
            </div>
            <div class="error-actions">
                <a href="/" class="btn btn-primary btn-lg">
                    <i class="bi bi-house"></i> Go Home
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg ms-2">
                    <i class="bi bi-box-arrow-in-right"></i> Login
                </a>
            </div>
        </div>
    </div>
</div>
