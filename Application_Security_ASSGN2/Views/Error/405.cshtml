@{
    ViewData["Title"] = "Method Not Allowed";
    Layout = "_ErrorLayout";
}

<div class="error-content">
    <div class="error-code">405</div>
    <h1 class="error-headline">Method Not Allowed</h1>
    <p class="error-subtitle">The HTTP method used is not allowed for this resource.</p>
    <div class="error-actions">
        <a href="/" class="btn-error-primary">Go Home</a>
        <a href="javascript:history.back()" class="btn-error-secondary">Go Back</a>
    </div>
</div>
