@{
    ViewData["Title"] = "Too Many Requests";
    Layout = "_ErrorLayout";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center py-5">
        <div class="error-template">
            <h1 class="display-1 text-warning">429</h1>
            <h2>Too Many Requests</h2>
            <div class="error-details my-4">
                <p class="text-muted">You have made too many requests in a short period. Please wait a moment and try again.</p>
            </div>
            <div class="error-actions">
                <a href="/" class="btn btn-primary btn-lg">
                    <i class="bi bi-house"></i> Go Home
                </a>
                <a href="javascript:location.reload()" class="btn btn-outline-secondary btn-lg ms-2">
                    <i class="bi bi-arrow-clockwise"></i> Try Again
                </a>
            </div>
        </div>
    </div>
</div>
