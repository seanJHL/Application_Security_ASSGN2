@{
    ViewData["Title"] = "Too Many Requests";
    Layout = "_ErrorLayout";
}

<div class="error-content">
    <div class="error-code">429</div>
    <h1 class="error-headline">Too Many Requests</h1>
    <p class="error-subtitle">You've made too many requests in a short period. Please wait a moment and try again.</p>
    <div class="error-actions">
        <a href="/" class="btn-error-primary">Go Home</a>
        <a href="javascript:location.reload()" class="btn-error-secondary">Try Again</a>
    </div>
</div>
