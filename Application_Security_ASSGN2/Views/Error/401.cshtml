@{
    ViewData["Title"] = "Unauthorized";
    Layout = "_ErrorLayout";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center py-5">
        <div class="error-template">
            <h1 class="display-1 text-warning">401</h1>
            <h2>Unauthorized</h2>
            <div class="error-details my-4">
                <p class="text-muted">You need to be logged in to access this resource. Please sign in and try again.</p>
            </div>
            <div class="error-actions">
                <a href="/Account/Login" class="btn btn-primary btn-lg">
                    <i class="bi bi-box-arrow-in-right"></i> Sign In
                </a>
                <a href="/" class="btn btn-outline-secondary btn-lg ms-2">
                    <i class="bi bi-house"></i> Go Home
                </a>
            </div>
        </div>
    </div>
</div>
