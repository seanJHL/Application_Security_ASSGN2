@{
    ViewData["Title"] = "Unauthorized";
    Layout = "_ErrorLayout";
}

<div class="error-content">
    <div class="error-code">401</div>
    <h1 class="error-headline">Unauthorized</h1>
    <p class="error-subtitle">You need to sign in to access this resource. Please authenticate and try again.</p>
    <div class="error-actions">
        <a href="/Account/Login" class="btn-error-primary">Sign In</a>
        <a href="/" class="btn-error-secondary">Go Home</a>
    </div>
</div>
