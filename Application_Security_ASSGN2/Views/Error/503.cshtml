@{
    ViewData["Title"] = "Service Unavailable";
    Layout = "_ErrorLayout";
}

<div class="error-content">
    <div class="error-code">503</div>
    <h1 class="error-headline">Service Unavailable</h1>
    <p class="error-subtitle">The server is temporarily unable to handle your request. Please try again later.</p>
    <div class="error-actions">
        <a href="/" class="btn-error-primary">Go Home</a>
        <a href="javascript:location.reload()" class="btn-error-secondary">Try Again</a>
    </div>
</div>
