@{
    ViewData["Title"] = "Bad Request";
    Layout = "_ErrorLayout";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center py-5">
        <div class="error-template">
            <h1 class="display-1 text-warning">400</h1>
            <h2>Bad Request</h2>
            <div class="error-details my-4">
                <p class="text-muted">The server could not understand your request. Please check your input and try again.</p>
            </div>
            <div class="error-actions">
                <a href="/" class="btn btn-primary btn-lg">
                    <i class="bi bi-house"></i> Go Home
                </a>
                <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg ms-2">
                    <i class="bi bi-arrow-left"></i> Go Back
                </a>
            </div>
        </div>
    </div>
</div>
