@{
    ViewData["Title"] = "Bad Request";
    Layout = "_ErrorLayout";
}

<div class="error-content">
    <div class="error-code">400</div>
    <h1 class="error-headline">Bad Request</h1>
    <p class="error-subtitle">The server couldn't understand your request. Please check your input and try again.</p>
    <div class="error-actions">
        <a href="/" class="btn-error-primary">Go Home</a>
        <a href="javascript:history.back()" class="btn-error-secondary">Go Back</a>
    </div>
</div>
