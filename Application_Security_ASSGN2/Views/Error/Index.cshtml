@{
    ViewData["Title"] = "Error";
    Layout = "_ErrorLayout";
}

<div class="error-content">
    <div class="error-code" style="font-size: 4rem;">Error</div>
    <h1 class="error-headline">Something Went Wrong</h1>
    <p class="error-subtitle">An unexpected error occurred. Please try again later.</p>
    <div class="error-actions">
        <a href="/" class="btn-error-primary">Go Home</a>
        <a href="javascript:history.back()" class="btn-error-secondary">Go Back</a>
    </div>
</div>
